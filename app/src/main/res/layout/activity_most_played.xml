                    </LinearLayout>
                <!--serapacion layout4-->
                    <LinearLayout
                android:id="@+id/layoutCenterRowsContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNombre4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
