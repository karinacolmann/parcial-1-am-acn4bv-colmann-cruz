                                android:text="@string/textViewGenero" />

                            <TextView
                                android:id="@+id/textViewDesarrollador1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/textViewDesarrollador" />

                        </LinearLayout>
                <!--serapacion layout2-->
